	<div
		id="playlist-container"
		class="relative transition-none duration-1000 bg-green-600"
	>
		<!-- PAGE HEADER -->

		<div class="relative z-10 px-6 pt-10">

		</div>

		<div
			class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/90"
		/>

	</div>
</Layout>

